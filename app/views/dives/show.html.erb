<div class="row">
  <div class="span6">
    <h2>A dive at <%= @dive.dive_site %></h2>
    <h3>
      <%= @dive.date %>
      <br/>
      From <%= @dive.time_in %> to <%= @dive.time_out %>
    </h3>
  </div>
  <div class="span6">
    <p>
      Dive Type: <%= @dive.record(@dive.dive_type) %>
      <br/>   
      Dive Activity: <%= @dive.record(@dive.dive_activity) %>
      <br/>        
      Maximum Depth: <%= @dive.record(@dive.depth) %> m
      <br/>
      Water Temperature: <%= @dive.record(@dive.temperature) %> Â°C
      <br/>
      Visibility: <%= @dive.record(@dive.visibility) %> m
      <br/>
      Conditions: <%= @dive.record(@dive.dive_activity) %>
      <br/>                         
      Starting Air: <%= @dive.record(@dive.start_air) %> bar
      <br/>
      Ending Air: <%= @dive.record(@dive.end_air) %> bar
      <br/>
      Wetsuit? <%= @dive.wetsuit %>
    </p>
  </div>
</div>
<div class="row">
  <div class="span12">
    <p>
      Notes: <%= @dive.record(@dive.notes) %>
    </p>
  </div>
</div>




