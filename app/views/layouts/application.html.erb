<!DOCTYPE html>
<html>
<head>
  <title>Divelog</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <%= analytics_init if Rails.env.production? %>
</head>
<body class ="<%= controller_name %> <%= action_name %>">
<div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="<%= root_path %>">divelog</a>
    </div>
    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav">
        <li class="active"><a href="<%= root_path %>">Home</a></li>
        <li><a href="<%= dives_path %>">My Dives</a></li>
        <li><a href="<%= new_dive_path %>">Log a Dive</a></li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
          <% if current_diver %>
            <a href="#" class="dropdown-toggle" data-toggle="dropdown"> 
              <%= current_diver.name %>
              <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", diver_path(current_diver) %></li>
              <li class="divider"></li>
              <li><%= link_to "Sign out", signout_path, id: "sign_out" %></li>
            </ul>  
          <% else %>
            <%= link_to "Sign In", "/auth/facebook", id: "sign_in" %>
          <% end %>  
        </li>
      </ul>
    </div><!--/.nav-collapse -->
  </div>
</div>


<div class="container">
  <%= yield %>
</div>


</body>
</html>